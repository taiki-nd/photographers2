<div class="content">
    <h2 class="sub_title">フォロー中</h2>
    <div class="container">
        <h3>一覧</h3>
        <% if @users.exists? %>
            <% @users.each do |user| %>
                <div class="follow_members">
                    <%= link_to user.nickname, user_path(user) %>
                    フォロー数: <%= user.followings.count %>　/　
                    フォロワー数: <%= user.followers.count %>
                </div>    
            <% end %>
        <% else %>
        
            <p>ユーザーはいません</p>
        <% end %>
    </div>
</div>
