<div class="content">
  <div class="container_sign">
    <h2>登録情報の変更</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field">
        <%= f.label :nickname %> <em>(10文字以内)</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "10" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label :password %> <i>(変更しない場合は入力しないでください)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "新しいパスワード（6文字以上）" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "新しいパスワード（確認）" %>
      </div>
    
      <div class="field">
        <%= f.label :current_password %> <br />
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワード" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>
    
    <h3>アカウント削除</h3>
    
    <p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    
  </div>
</div>