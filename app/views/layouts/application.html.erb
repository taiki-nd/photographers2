<!DOCTYPE html>
<html>
  <head>
    <title>Photographers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>    
  </head>
  
  <body>
    <header id="header">
      
      <div class="heading" id="heading_id">
        <h1 class="title"><a href="/">Photographers</a></h1>
      </div>
      
      <% if user_signed_in? %>
        <div class="current_user">
          user :   <%= link_to "#{current_user.nickname}", "/users/#{current_user.id}", class: 'user_name' %>
        </div>
      <% end %>
  
      <nav id="nav_bar">
        <ul class="navi_list">  
          <li class="navi"><a href="/">みんなの写真</a></li>
          <li class="navi"><a href="/cameras">カメラ一覧</a></li>
          <li class="navi"><a href="/lenzs">レンズ一覧</a></li>
        </ul>
        <ul class="navi_log">
          <% if user_signed_in? %>
            <li class="navi"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            <li class="navi"><%= link_to 'マイページ', "/users/#{current_user.id}" %></li>
            <li class="navi"><%= link_to '投稿する', new_post_path %></a></li>
          <% else %>
            <li class="navi"><%= link_to 'ログイン', new_user_session_path %></li>
            <li class="navi"><%= link_to '新規登録', new_user_registration_path %></li>
          <% end %>
        </ul>
        <ul class="navi_pages">
          <li class="navi"><a href="/pages/notice">運営からの知らせ</a></li>
          <li class="navi"><a href="/pages/contact">お問い合わせ</a></li>
        </ul>
      </nav>
  
      <div class="toggle_btn">
        <span></span>
        <span></span>
        <span></span>
      </div>
  
      <div id="mask"></div>
  　</header>
  
    <%= yield %>
    
  <footer id="footer">
    <div class="content">
      <div class="cantainer">
        <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
        <p class="copyright">Copyright photographers allright reserved</p>
      </div>
    </div>
  </footer>  
  
  </body>
  
</html>
