<section class="section" id="section2">
    <h2 class="sub_title">みんなの写真</h2>
    <div class="grid">
        <% @posts.each do |post| %>
            <div class="post">
                <img class="posted_img" src="<%= post.image %>">
                <p class="post_p"><%= post.name %></p>
                <p class="post_p"><%= post.camera %></p>
                <p class="post_p"><%= post.lens %></p>
                <%= link_to '詳細', post_path(post.id), method: :get %>
                <%= link_to '削除', post_path(post.id), method: :delete %>
                <%= link_to '編集', edit_post_path(post.id), method: :get %>
            </div>
        <% end %>
    </div>
</section>

