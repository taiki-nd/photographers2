<div class="content">
    <div class="container">
        <h3>投稿する</h3>
        <%= form_with(model: @post, local: true) do |form| %>
            <%= form.text_field :image, placeholder: "image URL" %>
            <%= form.select :image_cat, [["風景","風景"],["夜景","夜景"],["星","星"],["ポートレート","ポートレート"],["その他","その他"]], include_blank: "カテゴリーを選択して下さい" %>
            <!-- form.select :camera_maker, [["canon","canon"],["nikon","nikon"],["sony","sony"],["panasonic","panasonic"],["olympus","olympus"],["富士フイルム","富士フイルム"],["pentax","pentax"],["sigma","sigma"],["hasselblad","hasselblad"],["leica","leica"],["その他","その他"]], include_blank: "カメラメーカーを選択して下さい" %>-->
            <% form.select :Camera_ancestry, options_for_select(@parent_slect.map{|c| [c[:name_cam]]}), {selected: 1}, {id: "parent_category_cam"} %>
            
            
            <%= form.select :camera_maker, options_for_select(@camera_child_slect.map{|c| [c[:name_cam]]}), {include_blank: "カメラメーカーを選択して下さい"}, {id: "child_category_cam"} %>
            
            <script type="text/javascript">
                $(function() {
                    $('#child_category_cam').change(function() {
                        
                        
                        var intParent = document.getElementById("parent_category_cam").value
                        var intChild = document.getElementById("child_category_cam").value
                        var int = intParent + '/' + intChild
                        
                        $.ajax({
                            url: 'dynamic_select_category',
                            type: 'GET',
                            data: {id: int}
                        });
                    });
                });
            </script>

            <!-- form.text_field :camera, placeholder: "Camera" %>-->
            <%= form.select :camera, options_for_select(@camera_grandchild_slect.map{|c| [c[:name_cam]]}), {include_blank: "カメラを選択して下さい"}, {id: "cam_name"} %>      
          
            
            <%= form.select :lens_maker, [["canon","canon"],["nikon","nikon"],["sony","sony"],["panasonic","panasonic"],["olympus","olympus"],["富士フイルム","富士フイルム"],["pentax","pebtax"],["sigma","sigma"],["hasselblad","hasselblad"],["leica","leica"],["その他","その他"]], include_blank: "レンズメーカーを選択して下さい" %>
            <%= form.text_field :lens, placeholder: "Lens" %>
            <%= form.text_field :place, placeholder: "place" %>
            <%= form.text_field :text, placeholder: "Comment", rows: "5" %>
            <%= form.submit "SEND", data: { confirm: "他ユーザーが不快になる投稿ではないことをご確認ください" } %>
        <% end %>
    </div>
</div>